# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                             controllers.Application.index()

POST        /challenge/create             controllers.Application.createChallenge()

GET         /challenge/ajax/search        controllers.Application.ajaxGetChallengesForCriteria(phrase: String, category: String)

GET        /challenge/ajax/participate   controllers.Application.ajaxChangeChallengeParticipation(id: String, state: Boolean)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
